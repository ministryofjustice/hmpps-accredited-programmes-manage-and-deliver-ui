{% extends "../../partials/layout.njk" %}

{%- from "moj/components/alert/macro.njk" import mojAlert -%}
{% from "../../components/groupServiceNavigation.njk" import groupServiceNavigation %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{%- from "govuk/components/table/macro.njk" import govukTable -%}

{% set pageTitle = applicationName + " - Home" %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <span class="govuk-caption-xl">{{ text.headingCaptionText }}</span>
    <h1 class="govuk-heading-xl">{{ text.headingText }}</h1>
  </div>
</div>
{{ groupServiceNavigation(serviceNavigationArgs) }}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    {{ govukSummaryList(scheduleSummaryListArgs) }}
    {{ govukTable(scheduleSummaryTableArgs) }}
  </div>
</div>

{% endblock %}
