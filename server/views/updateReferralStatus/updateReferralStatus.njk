{% extends "../partials/layout.njk" %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{%- from "moj/components/timeline/macro.njk" import mojTimeline -%}
{%- from "govuk/components/tag/macro.njk" import govukTag -%}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/character-count/macro.njk" import govukCharacterCount %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set pageTitle = applicationName + " - Home" %}
{% set mainClasses = "app-container govuk-body" %}

{% block main %}
{% block content %}
<div class="govuk-width-container" id="main-content">
  {{ govukBackLink(backLinkArgs) }}
  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">Update {{presenter.details.personName}}'s referral status</h1>
        {%- set confirmationHtml %}
        {{ govukTag( currentStatusTagOptions ) }}
        {% endset -%}

        {{ mojTimeline(getCurrentStatusTimelineOptions(confirmationHtml)) }}
      </div>
    </div>
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-full">
        <hr class="govuk-section-break govuk-section-break--l govuk-section-break--visible">
      </div>
    </div>
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        <form method="post" novalidate>
          <input type="hidden" name="_csrf" value="{{csrfToken}}">
          {{ govukRadios(statusUpdateRadioButtons) }}

          {{ govukCharacterCount(addDetailsTextboxOptions) }}
          <div class="govuk-button-group">
            {{ govukButton({ text: "Submit", preventDoubleClick: true }) }}
            <a class="govuk-link" href=''>Cancel</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{% endblock %}
{% endblock %}
