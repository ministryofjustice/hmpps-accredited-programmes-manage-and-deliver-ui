{% extends "../partials/layout.njk" %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% set pageTitle = applicationName + " - Home" %}
{% set mainClasses = "app-container govuk-body" %}

{% block main %}
    {% block content %}
        <div class="govuk-width-container">
          <main class="govuk-main-wrapper" id="main-content">
                <div class="govuk-grid-row govuk-!-margin-bottom-6">
                  <div class="govuk-grid-column-two-thirds">
                    {{ govukBackLink(backLinkArgs) }}
                  </div>
                </div>
                <div class="govuk-grid-row">
                    <div class="govuk-grid-column-two-thirds">
                      <span class="govuk-caption-l">{{ text.headingCaptionText }}</span>
                      <h1 class="govuk-heading-l">{{ text.headingText }}</h1>
                      {{ govukSummaryList(sessionScheduleSummary) }}
                      <form method="post" novalidate>
                        <input type="hidden" name="_csrf" value="{{csrfToken}}">
                        <div class="govuk-button-group">
                          {{ govukButton({ text: "Create session", preventDoubleClick: true }) }}
                        </div>
                      </form>
                    </div>
                </div>
            </main>
        </div>
    {% endblock %}
{% endblock %}
