{% extends "../partials/layout.njk" %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "../components/groupServiceNavigation.njk" import groupServiceNavigation %}

{% set pageTitle = applicationName + " - Home" %}
{% set mainClasses = "app-container govuk-body" %}

{% block main %}
    {% block content %}
        <div class="govuk-width-container">
            <main class="govuk-main-wrapper" id="main-content">
                <div class="govuk-grid-row govuk-!-margin-bottom-3">
                    <div class="govuk-grid-column-two-thirds">
                        {{ govukBackLink(backLinkArgs) }}
                    </div>
                    <div class="govuk-grid-column-one-third">
                        <a class="return_to_homepage__link" href={{ homePageLink.href }}>{{ homePageLink.text }}</a>
                    </div>
                </div>
                <div class="govuk-grid-row">
                    <div class="govuk-grid-column-two-thirds">
                        <h1 class="govuk-heading-xl">Schedule</h1>
                        {{ groupServiceNavigation(presenter.groupId, "schedule") }}
                        {# <p class="govuk-body">You will be asked for information about the session you want to schedule.</p>
                        <p class="govuk-body govuk-!-margin-bottom-6">You can edit the details later if needed.</p> #}
                        <form method="post" novalidate>
                            <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                            {% if queryParams.groupId %}
                            <input type="hidden" name="groupId" value="{{ queryParams.groupId }}">
                            {% endif %}
                            {% if queryParams.moduleId %}
                            <input type="hidden" name="moduleId" value="{{ queryParams.moduleId }}">
                            {% endif %}
                            <div class="govuk-button-group">
                                {{ govukButton({ text: "Start", preventDoubleClick: true, isStartButton: true }) }}
                            </div>
                        </form>
                    </div>
                </div>
            </main>
        </div>
    {% endblock %}
{% endblock %}