{% extends "../partials/layout.njk" %}
{% from "govuk/components/accordion/macro.njk" import govukAccordion %}
{% from "../components/groupServiceNavigation.njk" import groupServiceNavigation %}
{% from "moj/components/alert/macro.njk" import mojAlert %}

{% set pageTitle = applicationName + " - Home" %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    {% if presenter.scheduleSessionSuccessMessageArgs %}
      {{ mojAlert(presenter.scheduleSessionSuccessMessageArgs) }}
    {% endif %}
    <span class="govuk-caption-l">{{ text.headingCaptionText }}</span>
    <h1 class="govuk-heading-xl">{{ text.headingText }}</h1>
  </div>
</div>

{{ groupServiceNavigation(serviceNavigationArgs) }}

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    {{ govukAccordion(sessionAttendanceAccordionArgs) }}
  </div>
</div>
{% endblock %}
