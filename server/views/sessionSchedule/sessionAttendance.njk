{% extends "../partials/layout.njk" %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/accordion/macro.njk" import govukAccordion %}
 {%- from "govuk/components/button/macro.njk" import govukButton %}
 {% from "../components/groupServiceNavigation.njk" import groupServiceNavigation %}

{% set pageTitle = applicationName + " - Home" %}
{% set mainClasses = "app-container govuk-body" %}

{% block main %}
    {% block content %}
        <div class="govuk-width-container">
          <main class="govuk-main-wrapper" id="main-content">
                <div class="govuk-grid-row govuk-!-margin-bottom-6">
                  <div class="govuk-grid-column-two-thirds">
                    {{ govukBackLink(backLinkArgs) }}
                  </div>
                  <div class="govuk-grid-column-one-third">
                    <a class="return_to_homepage__link" href={{ homePageLink.href }}>{{ homePageLink.text }}</a>
                  </div>
                </div>
                <div class="govuk-grid-row">
                    <div class="govuk-grid-column-full">
                        {% if presenter.groupInfo.code %}
                            <span class="govuk-caption-l">{{ presenter.groupInfo.code }}</span>
                        {% endif %}
                        <h1 class="govuk-heading-l">Sessions and attendance</h1>
                         {{ groupServiceNavigation(presenter.navigationPresenter.getServiceNavigationArgs()) }}
                        {% if sessionAttendanceaccordionArgs.items and sessionAttendanceaccordionArgs.items.length %}
                            {{ govukAccordion(sessionAttendanceaccordionArgs) }}
                        {% else %}
                            <p class="govuk-body">No modules or sessions available.</p>
                        {% endif %}                    </div>
                </div>
            </main>
        </div>
    {% endblock %}
{% endblock %}