{% extends "../partials/layout.njk" %}

{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{%- from "moj/components/timeline/macro.njk" import mojTimeline -%}
{%- from "govuk/components/tag/macro.njk" import govukTag -%}
{%- from "moj/components/sub-navigation/macro.njk" import mojSubNavigation -%}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/character-count/macro.njk" import govukCharacterCount %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{%- from "moj/components/alert/macro.njk" import mojAlert -%}

{% set pageTitle = applicationName + " - Home" %}
{% set mainClasses = "app-container govuk-body" %}

{% block main %}
  {% block content %}
    <div class="govuk-width-container" id="main-content">
      <div class="govuk-main-wrapper">
        <div class="govuk-grid-row">
          {% include "../partials/headerMenu.njk" %}
          <div class="govuk-grid-column-full">
            {{ mojSubNavigation(presenter.getHorizontalSubNavArgs()) }}
          </div>
        </div>

        <div class="govuk-grid-row">
          <div class="govuk-grid-column-two-thirds">
          {% if errorSummary %}
            {{ govukErrorSummary(errorSummary) }}
          {% endif %}
          {% if successMessageSummary %}
            {{ mojAlert(successMessageSummary) }}
          {% endif %}
          {% if presenter.isCohortUpdated %}
            {{ mojAlert(presenter.cohortUpdatedSuccessMessageArgs) }}
          {% endif %}
          {% if presenter.isLdcUpdated %}
            {{ mojAlert(presenter.ldcUpdatedSuccessMessageArgs) }}
          {% endif %}
          <h1 class="govuk-heading-m">{{presenter.pageHeading}}</h1>

          <p class="govuk-body">{{presenter.pageSubHeading}}</p>

          {{ mojTimeline(statusHistoryTimelineOptions) }}

          </div>
          </div>
          </div>
        </div>
      </div>
    </div>
    {% endblock %}
  {% endblock %}
